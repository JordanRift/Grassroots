@if (Model.Count() > 0) {
<section class="organization-settings">
    <fieldset>
        <legend>Advanced Settings</legend>
        <dl>
        @foreach (var setting in Model) { 
            <dt><label for="setting_@setting.Name">@setting.Name</label></dt>
            <dd class="textarea">
                @Html.TextArea(string.Format("setting_{0}", setting.Name), setting.Value, new { id = string.Format("setting_{0}", setting.Name) })
            </dd>
        }
        </dl>
    </fieldset>
</section>
}