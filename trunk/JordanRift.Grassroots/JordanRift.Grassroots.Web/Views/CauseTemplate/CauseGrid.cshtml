    Layout = null;
    var shouldLinkNames = ViewBag.LinkNames != null ? ViewBag.LinkNames : false;
}

@if (Model.Count() > 0)
{
<table class="cause-grid grid">
    <thead>
        <tr>
            <th>Name</th>
            <th>Date Completed</th>
            <th>Video</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var cause in Model) { 
        <tr>
            <td>
            @if (shouldLinkNames) { 
                @Html.ActionLink(cause.Name, "CauseDetails", new { controller = "CauseTemplate", area = "", id = cause.CauseTemplateID, referenceNumber = cause.ReferenceNumber }, new { title = cause.Name })
            }
            else {
                @cause.Name
            }
            </td>
            <td>@cause.DateCompleted.ToShortDateString()</td>
            <td><a href="#" data-cause-template-id="@cause.CauseTemplateID" title="Video">Video</a></td>
        </tr>
        }
    </tbody>
</table>
}
else { 
    <strong>We haven't completed any projects yet.</strong>
}