    ViewBag.Title = @Model.Name + " Project Details";
}

<hgroup>
    <h1>@Model.Name</h1>
    <h3>Project Details</h3>
</hgroup>
<section class="recipients">
    <span class="reference-number">@Model.ReferenceNumber</span>
    <img src="@Model.ImagePath" alt="@Model.Name" />
    @if (Model.Recipients.Count > 0) { 
    <ul>
        @foreach (var recipient in Model.Recipients) {
        <li>
            <p>@recipient.FirstName @recipient.LastName</p>
            <span>@recipient.Age</span>
        </li>
        }
    </ul>
    }
</section>
<section class="before-after">
    <ul>
        <li>
            <label>Before</label>
            <img src="@Model.BeforeImagePath" alt="Before" />
        </li>
        <li>
            <label>After</label>
            <img src="@Model.AfterImagePath" alt="After" />
        </li>
    </ul>
    <div class="deets">
        @if (!string.IsNullOrEmpty(Model.Region)) { 
        <p><strong>@Model.Region</strong></p>
        }
        <p><strong>Completed:</strong> @Model.DateCompleted.ToShortDateString()</p>
        <p><strong>Hours Served:</strong> @Model.HoursServed</p>
    </div>
</section>
<section class="media">
    <div class="video">
        @Html.Raw(Model.VideoEmbedHtml)
    </div>
    <div class="map">
        <div>
            <iframe width="425" height="350" frameborder="0" scrolling="no" marginheight="0" marginwidth="0" src="http://www.google.com/maps?f=q&amp;source=s_q&amp;hl=en&amp;geocode=&amp;q=@Model.Latitude,@Model.Longitude&am;pll=@Model.Latitude,@Model.Longitude&spn=0.29351,0.639438&output=embed&z=14"></iframe>
        </div>
        <ul>
            <li>Latitude: @Model.Latitude</li>
            <li>Longitude: @Model.Longitude</li>
        </ul>
    </div>
</section>
<section class="details">
    <h4>A little bit about @Model.Name</h4>
    <p>@Model.Summary</p>
</section>
