@model JordanRift.Grassroots.Web.Models.ForgotPasswordModel
@{
    ViewBag.Title = "Forgot Password";
}

@section DocumentHead
{
    @Html.Partial("UIForm")
}

<hgroup>
    <h1>Forgot your password?</h1>
    <h3>Type your email below...</h3>
</hgroup>
<div id="reset-password-form">
    @using (Html.BeginForm("ResetPassword", "Account")) {
        @Html.ValidationSummary(true, "Password reset was unsuccessful. Please correct the errors and try again.")
        <fieldset>
        <legend>Password Reset</legend>
        <dl>
            <dt>@Html.LabelFor(m => m.Email)</dt>
            <dd>
                @Html.TextBoxFor(m => m.Email)
                @Html.ValidationMessageFor(m => m.Email, null, new { @class = "ui-state-error ui-corner-all" })
            </dd>
        </dl>
        <div>@Html.UiSubmit("Reset My Password")</div>
        </fieldset>
    }
</div>