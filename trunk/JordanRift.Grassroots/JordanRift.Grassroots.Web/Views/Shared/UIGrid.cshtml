    <link href="@Url.Content("~/Content/jquery.jqGrid/ui.jqgrid.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/i18n/grid.locale-en.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.jqGrid.min.js")" type="text/javascript"></script>

    <script type="text/javascript">
        $(function () {
            $("#list").jqGrid({
                url: '/Admin/LoadCauseTemplateList',
                datatype: 'json',
                mtype: 'GET',
                colNames: ['ID', 'Name', 'Action', 'Goal Name', 'Summary', 'Active'],
                colModel: [
                    { name: 'CauseTemplateID', index: 'CauseTemplateID', width: 50, sorttype: "int" },
                    { name: 'Name', index: 'Name', width: 150, sorttype: "text" },
                    { name: 'ActionVerb', index: 'ActionVerb', width: 75, sorttype: "text" },
                    { name: 'GoalName', index: 'GoalName', width: 75, sorttype: "text" },
                    { name: 'Summary', index: 'Summary', width: 400, sorttype: "text" },
                    { name: 'Active', index: 'Active', width: 100, sorttype: "text" }
                ],
                pager: '#pager',
                rowNum: 10,
                rowList: [10, 20, 30],
                sortname: 'CauseTemplateID',
                sortorder: 'desc',
                viewrecords: true,
                caption: 'Project Templates',
                autoencode: true,
                loadonce: true,
                autowidth: true,
                shrinkToFit: false,
                loadComplete: function () {
                    jQuery("#list").jqGrid('setGridParam', { datatype: 'local' });
                },
                onPaging: function (which_button) {
                    jQuery("#list").jqGrid('setGridParam', { datatype: 'json' });
                },
                gridComplete: function () {
                    var objRows = $("#list tr");
                    var objHeader = $("#list .jqgfirstrow td");
                    if (objRows.length > 1) {
                        var objFirstRowColumns = $(objRows[1]).children("td");
                        for (i = 0; i < objFirstRowColumns.length; i++) {
                            $(objFirstRowColumns[i]).css("width", $(objHeader[i]).css("width"));
                        }
                    }
                }
            });
        });     
    </script>