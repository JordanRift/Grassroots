@model DateTime?

@{
    DateTime date = new DateTime(1900, 1, 1);
    
    if (Model != null && Model.HasValue)
    {
        date = Model.Value;
    }
}

@Html.TextBox("", (date > new DateTime(1900, 1, 1) ? date.ToShortDateString() : string.Empty), 
    new { @class = "datePicker", placeholder = "MM/DD/YYYY" })