<!DOCTYPE html>
<html xmlns:fb="http://www.facebook.com/2008/fbml" xmlns:og="http://opengraph.org/schema/" class="no-js">
    <head>
        <title>@ViewBag.Title</title>
        <meta charset="utf-8" />
        <link href="@Url.Content("~/Content/reset.css")" rel="stylesheet" type="text/css" />
        <link href="@Url.Content("~/Content/styles.css")" rel="stylesheet" type="text/css" />
        @Html.Action("ThemeCss", new { controller = "Home" })
        <script src="@Url.Content("~/Scripts/jquery-1.4.4.min.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/modernizr-1.7.min.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/scripts/grassroots.core.js")" type="text/javascript"></script>
        @RenderSection("DocumentHead", required: false)
    </head>
    <body>
        <div class="page">
            <header>
                <hgroup>
                    <h1><a href="@Url.Action("Index", new { controller = "Home" })" title="Home">Grassroots</a></h1>
                    <h2>Social giving. Done right.</h2>
                </hgroup>
                <section class="user-info">
                    @Html.Partial("LogOnUserControl")
                </section>
                <nav>
                    @Html.Partial("MainNavigation")
                </nav>
            </header>
            <section id="main">
                @Html.Partial("UserFeedback")
                @RenderBody()
                <div class="break"></div>
            </section>
            <footer>
                @Html.Partial("Footer")
            </footer>
        </div>
    </body>
</html>