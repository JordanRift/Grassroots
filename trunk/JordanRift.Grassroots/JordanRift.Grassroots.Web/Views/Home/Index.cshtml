    <div class="dashboard">
        @Html.Action("ProgressBar", new { controller = "Home" })
        <aside class="donate">
            @Html.ActionLink("Donate Now", "Index", new { controller = "Donate" }, new { title = "Donate", @class = "ui-button ui-corner-all" })
        </aside>
    </div>
    <div class="info">
        <div class="video">
            @Html.Raw(Model.VideoEmbedHtml)
        </div>
        <div class="summary">
            <p>@Model.Summary</p>
            <aside class="social">
                @Html.Partial("FacebookLikeButton")
                @Html.Partial("TweetButton")
            </aside>
        </div>
    </div>
    <div class="feeds">
        @Html.Action("TwitterFeed", new { controller = "Home" })
        @Html.Action("BlogRssFeed", new { controller = "Home" })
    </div>