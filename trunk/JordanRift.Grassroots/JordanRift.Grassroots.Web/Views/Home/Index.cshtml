    ViewBag.Title = OrganizationTagline;
}

    <div class="dashboard">
        @if (!string.IsNullOrEmpty(HomePageHeaderHtml)) {
        @Html.Raw(HomePageHeaderHtml)
        }
        else {
        @Html.Action("ProgressBar", new {controller = "Home"})
        }
        <aside class="donate">
            @Html.ActionLink("Get Started/Log In", "GetStarted", new { controller = "Campaign" }, new { title = "Get Started", @class = "ui-button ui-corner-all" })
        </aside>
        @Html.Action("Stats", new { controller = "Home" })
    </div>
    <div class="info">
        <div class="video">
            @Html.Raw(Model.VideoEmbedHtml)
        </div>
        <div class="org-summary">
            @Html.Raw(Model.SummaryHtml)
            <ul class="social">
                <li>@Html.Partial("TweetButton")</li>
                <li>@Html.Partial("FacebookLikeButton")</li>
                <li>@Html.Partial("PlusOneButton")</li>
                <li>@Html.Partial("StumbleButton")</li>
                <li>@Html.Partial("DeliciousButton")</li>
            </ul>
        </div>
    </div>
    @if (!string.IsNullOrEmpty(HomePageHtml)) {
    <div class="home-page-content">
        @Html.Raw(HomePageHtml)
    </div>
    }
    @if (!string.IsNullOrEmpty(Model.TwitterName) || !string.IsNullOrEmpty(Model.BlogRssUrl)) {
    <div class="feeds">
        @if (!string.IsNullOrEmpty(Model.TwitterName)) {
        @Html.Action("TwitterFeed", new { controller = "Home" })
        }
        @if (!string.IsNullOrEmpty(Model.BlogRssUrl)) {
            @Html.Action("BlogRssFeed", new { controller = "Home" })
        }
    </div>
    }
@section DocumentBottom {
    <script type="text/javascript" src="https://apis.google.com/js/plusone.js"></script>
}